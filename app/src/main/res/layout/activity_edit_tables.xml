<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/athens_gray"
    tools:context=".EditTablesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:layout_marginTop="24sp"
            android:layout_marginEnd="16sp">

            <TextView
                android:id="@+id/number_table_textView"
                style="@style/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/receiver_logo"
            android:layout_marginStart="16sp"
            android:layout_marginTop="16sp"
            android:layout_marginEnd="16sp"
            android:background="@color/catskill_white"
            android:elevation="4sp"
            android:padding="16sp">

            <TableLayout
                android:id="@+id/frequency_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </ScrollView>

        <LinearLayout
            android:id="@+id/edit_table_options_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:elevation="4sp"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/light_gray"
                tools:ignore="SmallSp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/catskill_white"
                android:gravity="center">

                <Button
                    android:id="@+id/discard_changes_button"
                    style="@style/button_tertiary"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_small_height"
                    android:layout_margin="16sp"
                    android:paddingStart="8sp"
                    android:paddingEnd="8sp"
                    android:text="@string/lb_discard_changes"
                    android:textColor="@color/ebony_clay"
                    android:visibility="visible" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/edit_frequency_table_button"
                    style="@style/button_secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_small_height"
                    android:layout_margin="16sp"
                    android:text="@string/lb_edit_table" />

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/edit_table_message_textView"
            style="@style/body_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8sp"
            android:text="@string/lb_edit_table_in_order"
            android:textColor="@color/ebony_clay"
            android:visibility="gone" />

        <Button
            android:id="@+id/edit_table_option_button"
            style="@style/button_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:layout_marginBottom="24sp"
            android:text="@string/lb_edit_table" />

        <Button
            android:id="@+id/save_changes_button"
            style="@style/button_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:layout_marginBottom="24sp"
            android:alpha="0.6"
            android:enabled="false"
            android:text="@string/lb_save_changes"
            android:visibility="gone" />

        <include
            layout="@layout/receiver_status"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>