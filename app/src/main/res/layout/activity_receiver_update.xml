<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/athens_gray"
    tools:context=".ReceiverUpdateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/updating_receiver_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16sp"
                android:layout_marginVertical="24sp"
                android:background="@color/catskill_white"
                android:elevation="4sp"
                android:orientation="vertical"
                android:padding="16sp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8sp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:layout_width="@dimen/line_height"
                        android:layout_height="@dimen/line_height"
                        android:layout_marginEnd="8sp" />

                    <TextView
                        style="@style/subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lb_updating_receiver"
                        android:textColor="@color/ebony_clay" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/updating_receiver_progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="24sp"
                    android:layout_marginBottom="48sp"
                    android:progress="90"
                    android:progressDrawable="@drawable/progress_bar" />

                <Button
                    android:id="@+id/cancel_update_button"
                    style="@style/button_tertiary_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8sp"
                    android:text="@string/lb_cancel_update" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/update_receiver_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16sp"
                android:layout_marginVertical="24sp"
                android:background="@color/catskill_white"
                android:elevation="4sp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16sp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/update_done_imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    style="@style/h1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="24sp"
                    android:text="@string/lb_receiver_is_up"
                    android:textColor="@color/ebony_clay" />

            </LinearLayout>

        </LinearLayout>

        <include
            layout="@layout/receiver_status"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>