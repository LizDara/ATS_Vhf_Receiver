<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slate_300"
    android:orientation="vertical"
    tools:context=".VHF.EnterCoefficientActivity">

    <include
        layout="@layout/vhf_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:layout_marginTop="24sp"
        android:layout_marginEnd="16sp"
        android:background="@color/catskill_white"
        android:elevation="4sp"
        android:orientation="vertical"
        android:paddingVertical="16sp"
        tools:ignore="NestedWeights">

        <TextView
            android:id="@+id/coefficient_textView"
            style="@style/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16sp"
            android:layout_marginTop="16sp"
            android:layout_marginBottom="8sp"
            android:gravity="center"
            android:textColor="@color/slate_gray" />

        <View
            android:id="@+id/line_frequency_view"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginHorizontal="16sp"
            android:background="@color/ghost"
            tools:ignore="SmallSp" />

        <include
            layout="@layout/coefficients_number"/>

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/save_coefficient_button"
        style="@style/button_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16sp"
        android:layout_marginVertical="24sp"
        android:alpha="0.6"
        android:enabled="false"
        android:text="@string/lb_save" />

    <include
        layout="@layout/receiver_status"/>

</LinearLayout>