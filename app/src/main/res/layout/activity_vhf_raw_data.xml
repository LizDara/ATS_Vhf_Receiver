<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slate_300"
    android:orientation="vertical"
    tools:context=".VHF.RawDataActivity">

    <include
        layout="@layout/vhf_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/file_source_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="24sp"
                android:layout_marginBottom="8sp"
                android:textColor="@color/limed_spruce"
                android:text="@string/lb_file_source" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16sp"
                android:orientation="vertical"
                android:padding="16sp"
                android:elevation="4sp"
                android:background="@color/catskill_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/sd_card_raw_imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8sp">

                        <TextView
                            style="@style/body_x_small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/slate_gray"
                            android:text="@string/lb_sd_card" />

                        <TextView
                            android:id="@+id/sd_card_raw_textView"
                            style="@style/body_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/ebony_clay" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/message_no_inserted_textView"
                    style="@style/body_x_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ebony_clay"
                    android:text="@string/lb_message_none_detected"
                    android:visibility="gone"/>

            </LinearLayout>

            <TextView
                style="@style/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="16sp"
                android:layout_marginBottom="8sp"
                android:textColor="@color/limed_spruce"
                android:text="@string/lb_selected_file" />

            <LinearLayout
                android:id="@+id/select_file_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16sp"
                android:orientation="horizontal"
                android:padding="16sp"
                android:elevation="4sp"
                android:gravity="center_vertical"
                android:background="@color/catskill_white">

                <TextView
                    style="@style/button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/limed_spruce"
                    android:text="@string/lb_select_file"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_plus" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/selected_file_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16sp"
                android:orientation="horizontal"
                android:padding="16sp"
                android:elevation="4sp"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:background="@color/catskill_white">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_file"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/file_name_textView"
                        style="@style/button_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/ebony_clay" />

                    <TextView
                        android:id="@+id/file_description_textView"
                        style="@style/body_x_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/slate_gray" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/delete_file_imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_close"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/convert_data_button"
                style="@style/button_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16sp"
                android:layout_marginVertical="16sp"
                android:text="@string/lb_convert_data_file" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/converting_raw_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="16sp"
                android:layout_marginVertical="24sp"
                android:padding="16sp"
                android:elevation="4sp"
                android:background="@color/catskill_white">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8sp">

                    <ProgressBar
                        android:layout_width="@dimen/line_height"
                        android:layout_height="@dimen/line_height"
                        android:layout_marginEnd="8sp" />

                    <TextView
                        style="@style/subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/ebony_clay"
                        android:text="@string/lb_converting_raw_file" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/converting_raw_progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginBottom="48sp"
                    android:progressDrawable="@drawable/progress_bar" />

                <Button
                    android:id="@+id/cancel_conversion_button"
                    style="@style/button_tertiary_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8sp"
                    android:text="@string/lb_cancel_conversion" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/file_converted_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="16sp"
                android:layout_marginVertical="24sp"
                android:elevation="4sp"
                android:gravity="center"
                android:background="@color/catskill_white">

                <ImageView
                    android:layout_width="@dimen/button_height"
                    android:layout_height="@dimen/button_height"
                    android:layout_gravity="center"
                    android:layout_marginTop="48sp"
                    android:layout_marginBottom="24sp"
                    android:background="@drawable/circle_check"
                    tools:ignore="ContentDescription" />

                <TextView
                    style="@style/h1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16sp"
                    android:gravity="center"
                    android:text="@string/lb_file_converted"
                    android:textColor="@color/ebony_clay" />

                <TextView
                    android:id="@+id/new_file_name_textView"
                    style="@style/body_x_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16sp"
                    android:gravity="center"
                    android:textColor="@color/ebony_clay" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <include
        layout="@layout/receiver_status"/>

</LinearLayout>