<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16sp"
    android:layout_marginEnd="16sp"
    android:orientation="vertical"
    android:visibility="visible"
    android:elevation="4sp"
    android:background="@color/catskill_white">

    <ImageView
        android:id="@+id/spinner_testing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48sp"
        android:layout_marginBottom="24sp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/state_test_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48sp"
        android:gravity="center"
        android:text="@string/lb_running_test"
        android:textColor="@color/ebony_clay"
        style="@style/h1"/>

</LinearLayout>