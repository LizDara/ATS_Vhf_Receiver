<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16sp"
    android:layout_marginEnd="16sp"
    android:background="@color/catskill_white"
    android:elevation="4sp"
    android:orientation="vertical"
    android:visibility="visible">

    <ProgressBar
        android:id="@+id/testing_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="48sp"
        android:layout_marginBottom="24sp" />

    <ImageView
        android:id="@+id/complete_test_imageView"
        android:layout_width="@dimen/button_height"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center"
        android:layout_marginTop="48sp"
        android:layout_marginBottom="24sp"
        android:background="@drawable/circle_check" />

    <TextView
        android:id="@+id/state_test_textView"
        style="@style/h1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48sp"
        android:gravity="center"
        android:text="@string/lb_running_diagnostics"
        android:textColor="@color/ebony_clay" />

</LinearLayout>