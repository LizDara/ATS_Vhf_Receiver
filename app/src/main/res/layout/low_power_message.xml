<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/disconnect_message"
    android:layout_height="wrap_content"
    android:background="@color/catskill_white"
    android:elevation="4sp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32sp">

    <LinearLayout
        android:layout_width="@dimen/connect_image"
        android:layout_height="@dimen/connect_image"
        android:layout_marginBottom="32sp"
        android:background="@drawable/connected_light"
        android:elevation="4sp"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/receiver_connect"
            android:layout_height="@dimen/receiver_connect"
            android:src="@drawable/receiver" />

    </LinearLayout>

    <TextView
        android:id="@+id/disconnect_message"
        style="@style/h1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/low_power_mode"
        android:textColor="@color/ebony_clay" />

</LinearLayout>