<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/manual_scan_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8sp"
    android:layout_weight="1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16sp"
        android:layout_marginHorizontal="32sp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gps_manual_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_gps_off"/>

        <TextView
            android:id="@+id/state_manual_textView"
            style="@style/body_regular"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="8sp"
            android:gravity="bottom"
            android:textColor="@color/ebony_clay"
            android:visibility="gone" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/record_data_manual_button"
            style="@style/button_primary_small"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_small_height"
            android:paddingHorizontal="10sp"
            android:text="@string/lb_record_data" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16sp"
        android:layout_marginBottom="16sp"
        android:background="@color/catskill_white"
        android:elevation="4sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16sp">

            <TextView
                style="@style/body_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8sp"
                android:text="@string/lb_frequency"
                android:textColor="@color/limed_spruce" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/minus_imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_decrease"/>

                <TextView
                    android:id="@+id/frequency_scan_manual_textView"
                    style="@style/body_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16sp"
                    android:textColor="@color/ebony_clay"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/plus_imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_increase"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/edit_frequency_button"
                    style="@style/button_tertiary_small"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_small_height"
                    android:paddingHorizontal="10sp"
                    android:text="@string/lb_edit_frequency" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/light_gray"
            tools:ignore="SmallSp" />

        <LinearLayout
            android:id="@+id/audio_manual_linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="16sp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/body_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8sp"
                        android:text="@string/lb_id_audio"
                        android:textColor="@color/limed_spruce" />

                    <TextView
                        android:id="@+id/id_audio_manual_textView"
                        style="@style/body_large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/ebony_clay"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/edit_audio_manual_textView"
                    style="@style/button_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/lb_edit_audio_options"
                    android:textColor="@color/limed_spruce" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/light_gray"
                tools:ignore="SmallSp" />

        </LinearLayout>

        <include
            layout="@layout/scan_details"/>

    </LinearLayout>

</LinearLayout>