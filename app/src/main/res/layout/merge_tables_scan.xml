<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/merge_tables_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/option_tables_textView"
        style="@style/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="24sp"
        android:layout_marginStart="16sp"
        android:text="@string/lb_select_table_merge"
        android:textColor="@color/black" />

    <ListView
        android:id="@+id/tables_merge_listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16sp"
        android:dividerHeight="16sp"
        android:divider="@color/transparent"/>

    <Button
        android:id="@+id/merge_tables_button"
        style="@style/button_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:layout_marginEnd="16sp"
        android:layout_marginBottom="24sp"
        android:alpha="0.6"
        android:enabled="false"
        android:text="@string/lb_merge_tables" />

</LinearLayout>