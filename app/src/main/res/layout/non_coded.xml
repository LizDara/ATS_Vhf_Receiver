<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/non_coded_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16sp"
    android:layout_marginTop="24sp"
    android:layout_marginEnd="16sp"
    android:background="@color/catskill_white"
    android:elevation="4sp"
    android:orientation="vertical"
    android:padding="16sp">

    <TextView
        style="@style/h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8sp"
        android:layout_marginBottom="24sp"
        android:text="@string/lb_pulse_rate_type"
        android:textColor="@color/limed_spruce" />

    <TextView
        style="@style/body_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48sp"
        android:text="@string/lb_choose_one"
        android:textColor="@color/limed_spruce" />

    <Button
        android:id="@+id/select_pulse_rate_button"
        style="@style/button_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8sp"
        android:text="@string/lb_select_pulse_rate" />

</LinearLayout>