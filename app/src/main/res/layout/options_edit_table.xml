<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/connect_image"
    android:layout_height="wrap_content"
    android:background="@color/catskill_white"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/edit_table_button"
        android:layout_width="@dimen/connect_image"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/mountain_meadow"
        android:gravity="center"
        android:text="@string/lb_edit_table"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/clear_table_button"
        android:layout_width="@dimen/connect_image"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/mountain_meadow"
        android:gravity="center"
        android:text="@string/lb_clear_table"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>