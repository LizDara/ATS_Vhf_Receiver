<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="h1" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/h1</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="h2" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/h2</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="subtitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/subtitle</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="body_large" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/body_large</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="body_regular" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/body_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="body_small" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/body_small</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="body_x_small" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/body_x_small</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="button" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="button_small" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/body_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="text_button" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="paragraph" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/paragraph</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="lineHeight">@dimen/line_height</item>
    </style>

    <style name="paragraph_small" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/paragraph_small</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="lineHeight">@dimen/line_height</item>
    </style>

    <style name="button_primary" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:elevation">@dimen/elevation_button</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textAppearance">@style/button</item>
        <item name="android:textColor">@color/white_ice</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_secondary" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:elevation">@dimen/elevation_button</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textAppearance">@style/button</item>
        <item name="android:textColor">@color/mountain_meadow</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_tertiary" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/button_tertiary</item>
        <item name="elevation">@dimen/elevation_button</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textAppearance">@style/button</item>
        <item name="android:textColor">@color/limed_spruce</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_primary_small" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:elevation">@dimen/elevation_button</item>
        <item name="android:minHeight">@dimen/button_small_height</item>
        <item name="android:textAppearance">@style/button_small</item>
        <item name="android:textColor">@color/white_ice</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_secondary_small" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:elevation">@dimen/elevation_button</item>
        <item name="android:minHeight">@dimen/button_small_height</item>
        <item name="android:textAppearance">@style/button_small</item>
        <item name="android:textColor">@color/mountain_meadow</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_secondary_light" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_secondary_light</item>
        <item name="android:elevation">@dimen/elevation_button</item>
        <item name="android:minHeight">@dimen/button_small_height</item>
        <item name="android:textAppearance">@style/button</item>
        <item name="android:textColor">@color/white_ice</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_tertiary_small" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/button_tertiary</item>
        <item name="android:elevation">@dimen/elevation_button</item>
        <item name="android:minHeight">@dimen/button_small_height</item>
        <item name="android:textAppearance">@style/button_small</item>
        <item name="android:textColor">@color/limed_spruce</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="button_rectangle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/catskill_white</item>
        <item name="android:drawableEnd">@drawable/ic_next</item>
        <item name="android:elevation">@dimen/elevation_button</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">@dimen/text_button</item>
        <item name="android:textAppearance">@style/button</item>
        <item name="android:textColor">@color/limed_spruce</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_cancel" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_cancel</item>
        <item name="android:elevation">@dimen/elevation_button</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textAppearance">@style/button</item>
        <item name="android:textColor">@color/white_ice</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_delete" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_delete</item>
        <item name="android:elevation">@dimen/elevation_button</item>
        <item name="android:minHeight">@dimen/button_height_numbers</item>
        <item name="android:textAppearance">@style/button</item>
        <item name="android:textColor">@color/white_ice</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_number_small" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/button_number</item>
        <item name="android:elevation">@dimen/elevation_button</item>
        <item name="android:minHeight">@dimen/button_height_numbers</item>
        <item name="android:textAppearance">@style/button</item>
        <item name="android:textColor">@color/ebony_clay</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
